{
  "name": "gk-ds",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/gk-ds.umd.js",
  "module": "./dist/gk-ds.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/gk-ds.es.js",
      "require": "./dist/gk-ds.umd.js"
    },
    "./styles": "./dist/gk-ds.css"
  },
  "customElements": "./dist/custom-elements.json",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/build-css.js",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/web-components-vite": "^9.1.5",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.35.0",
    "jsdom": "^27.0.0",
    "lit": "^3.3.1",
    "prettier": "^3.6.2",
    "storybook": "^9.1.5",
    "typescript": "~5.8.3",
    "vite": "^7.1.2",
    "vite-plugin-cem": "^0.8.4",
    "vitest": "^3.2.4"
  }
}
